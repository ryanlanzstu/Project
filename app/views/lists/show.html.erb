<h1>List: <%= @list.name %></h1>
<p><%= @list.description %></p>

<%= link_to 'Edit List', edit_list_path(@list), class: 'btn btn-primary' %> |
<%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>

<hr>

<h2>Tasks</h2>

<%= link_to 'New Task', new_list_task_path(@list), class: 'btn btn-success' %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %> - 
      <%= link_to 'Edit', edit_task_path(task) %> | 
      <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
